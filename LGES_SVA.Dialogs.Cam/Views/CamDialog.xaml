							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
						</Grid.RowDefinitions>

						<TextBlock Grid.Row="0" Text="Model Name : " HorizontalAlignment="Right"/>
						<TextBlock Grid.Row="1" Text="Vendor : " HorizontalAlignment="Right"/>
						<TextBlock Grid.Row="2" Text="FPS : " HorizontalAlignment="Right"/>
