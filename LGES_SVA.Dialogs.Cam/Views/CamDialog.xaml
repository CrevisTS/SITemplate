					</Grid>
				</Grid>
			</GroupBox>
		</Grid>
		
		<!-- Cam4 -->
		<Grid Grid.Row="5" Margin="0 5 0 5">
			<GroupBox Header="Cam4" Foreground="White">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="100"/>
						<ColumnDefinition/>
						<ColumnDefinition/>
